<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="mode" format="reference" />
    <attr name="actionBarTitle" format="reference" />
    <attr name="actionBarRoot" format="reference" />
    <attr name="tabItemFragmentMain" format="reference" />
    <attr name="infoItemCell" format="reference" />
    <attr name="infoItemCellTitle" format="reference" />
    <attr name="infoContentActivityRootbackground" format="reference" />
    <attr name="infoContentTitleItem" format="reference" />
    <attr name="infoContentSummaryItem" format="reference" />
    <attr name="infoContentItem" format="reference" />
    <attr name="infoContentBoldTitleItem" format="reference" />

    <declare-styleable name="CircularProgressBar">
        <attr name="cpbStyle" format="reference"/>
        <attr name="cpb_color" format="color"/>
        <attr name="cpb_colors" format="reference"/>
        <attr name="cpb_stroke_width" format="dimension"/>
        <attr name="cpb_min_sweep_angle" format="integer"/>
        <attr name="cpb_max_sweep_angle" format="integer"/>
        <attr name="cpb_sweep_speed" format="float"/>
        <attr name="cpb_rotation_speed" format="float"/>
    </declare-styleable>

    <declare-styleable name="FloatingActionButton">
        <attr name="fab_colorPressed" format="color" />
        <attr name="fab_colorNormal" format="color" />
        <attr name="fab_colorRipple" format="color" />
        <attr name="fab_shadow" format="boolean" />
    </declare-styleable>

    <declare-styleable name="WaitingDots">
        <attr name="android:textSize" />
        <attr name="android:textColor" />
        <attr name="dotsColor" format="color" />
        <attr name="period" format="integer" />
        <attr name="jumpHeight" format="integer" />
        <attr name="autoplay" format="boolean" />
    </declare-styleable>

    <declare-styleable name="WaterDropView">
        <attr name="max_circle_radius" format="dimension"/>
        <attr name="min_circle_radius" format="dimension"/>
        <attr name="waterdrop_color" format="color"/>
        <attr name="topcircle_x" format="dimension"/>
        <attr name="topcircle_y" format="dimension"/>
        <attr name="bottomcircle_x" format="dimension"/>
        <attr name="bottomcircle_y" format="dimension"/>
    </declare-styleable>

</resources>